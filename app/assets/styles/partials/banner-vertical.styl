.{$banner-name}
    width $width
    height $heigth
    overflow hidden
    position relative
    border 1px solid $color-gray
    font-family $fontDefault

.content
    padding $content-padding

.image
    display block
    width $image-width
    height $image-height

    &-link
        display block

.attribution
    position absolute
    right -1px
    bottom -1px
    background #ffb300
    color #fff
    padding 0 5px 0 15px
    height 13px
    font-size 8px
    line-height @height
    font-weight bold
    border-top-left-radius 3px

    &:before
        content ''
        display block
        position absolute
        left 3px
        top 3px
        width 7px
        height 7px
        border-radius 50%
        background radial-gradient(ellipse at center, #fff 0%, #fff 20%, #ffb300 30%, #ffb300 50%, #fff 60%, #fff 100%); // @stylint off

    &:hover
        color #fff !important