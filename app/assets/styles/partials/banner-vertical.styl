.{$banner-name}
    width $width
    height $heigth
    box-sizing border-box
    padding $banner-top-offset $banner-side-offset
    overflow hidden
    position relative
    font-family $fontDefault
    background $color-blue url('../image/' + $image + '-img.png') no-repeat 0 0
    background-size contain

.age-limit
    font 400 16px/1.2 $fontDefault
    color $color-white
    z-index 100
    position absolute
    top 12px
    left $banner-side-offset

.slider
    position absolute
    top $slide-top-offset
    bottom $slide-bottom-offset
    overflow hidden
    left 0
    right 0

    &__item
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        opacity 0
        visibility hidden
        transition opacity $slide-animation-time $timing-function, visibility $slide-animation-time $timing-function

        &-top
            width 100%
            height 192px

        &-bottom
            padding 0 $banner-side-offset

        &_fill
            background $color-blue

        &_active
            opacity 1
            visibility visible

.logo
    background url('../image/delivery-logo.svg') no-repeat 0 0
    background-size cover
    width $logo-width
    height $logo-height
    display block
    margin -20px auto 0

.button
    display block
    box-sizing border-box
    position absolute
    left $banner-side-offset
    bottom $banner-bottom-offset
    right $banner-side-offset
    z-index 20
    outline 0
    text-decoration none
    text-align center
    color $color-white
    background $color-blue
    border 1px solid $color-white
    border-radius 3px
    height 44px
    font 400 16px/44px $fontDefault
    transition background $slide-animation-time $timing-function, color $slide-animation-time $timing-function

    &:hover
        background $color-white
        color $color-blue


