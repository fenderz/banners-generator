.{$banner-name}
    width $width
    height $heigth
    overflow hidden
    position relative
    border 1px solid $color-gray
    font-family $fontDefault

.content
    padding 11px 20px 14px

.image
    display block
    width $image-width
    height $image-height
    margin 0 auto
    position relative
    z-index 10

    &-link
        display block
        width 100%
        height $image-height
        position relative
        overflow hidden

    &-cover
        position absolute
        width 100%
        top 0
        bottom 0
        display block
        z-index 1
        margin auto
        filter blur(5px)
        opacity .6

.attribution
    position absolute
    right -1px
    bottom -1px
    background #ffb300
    color #fff
    padding 0 5px 0 15px
    height 13px
    font-size 8px
    line-height @height
    border-top-left-radius 3px

    &:before
        content ''
        display block
        position absolute
        left 3px
        top 3px
        width 7px
        height 7px
        border-radius 50%
        background radial-gradient(ellipse at center, #fff 0%, #fff 20%, #ffb300 30%, #ffb300 50%, #fff 60%, #fff 100%); // @stylint off

    &:hover
        color #fff !important
