.vr-1
    width $width
    height $heigth
    overflow hidden
    position relative
    border 1px solid $color-gray
    font-family $fontDefault

.image
    width $image-width
    height $image-height
    float left
    margin-right 15px

    &-link
        display block

    img
        width $image-width
        height $image-height
        display block

.attribution
    position absolute
    right -1px
    bottom -1px
    background #ffb300
    color #000
    padding 0 5px 0 5px
    height 13px
    font-size 10px
    line-height @height
    border-top-left-radius 3px

.logo
.call-to-action
    display none

