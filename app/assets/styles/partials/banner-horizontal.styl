.{$banner-name}
    width $width
    height $heigth
    box-sizing border-box
    overflow hidden
    position relative
    font-family $fontDefault
    background $color-blue url('../image/' + $image + '-img.png') no-repeat 0 0
    background-size contain
    border 1px solid $color-gray

.age-limit
    font 400 16px/1.2 $fontDefault
    color $color-white
    z-index 100
    position absolute
    top 12px
    left 12px
    text-shadow 0 0 2px rgba(#000, .4)

.slider
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index 10
    overflow hidden

    &__item
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        padding 18px 275px 18px 306px
        opacity 0
        visibility hidden
        transition opacity $slide-animation-time $timing-function, visibility $slide-animation-time $timing-function

        &_fill
            background $color-blue

        &_active
            opacity 1
            visibility visible

.logo
    background url('../image/delivery-logo.svg') no-repeat 0 0
    background-size cover
    width $logo-width
    height $logo-height
    display block
    margin 23px 0 0 44px

.button
    display block
    box-sizing border-box
    height 44px
    width 200px
    position absolute
    top 36px
    right 30px
    z-index 5
    outline 0
    text-decoration none
    text-align center
    color $color-white
    background $color-blue
    border 1px solid $color-white
    border-radius 3px
    font 400 16px/42px $fontDefault
    transition background $slide-animation-time $timing-function, color $slide-animation-time $timing-function

    &:hover
        background $color-white
        color $color-blue

.banner-link
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    z-index 20

    &:hover ~ .button
        background $color-white
        color $color-blue

