// Font-family
$fontDefault = unquote(data.main.style.defaultFont)

// Colors
$color-purple = unquote(data.main.style.color1)
$color-white = unquote(data.main.style.color2)

// Offset
$width = unit(data.main.dimensions.width - 2, 'px')
$heigth = unit(data.main.dimensions.height - 2, 'px')
$slide-top-offset = 70px
$slide-bottom-offset = 112px
$slide-left-offset = 10px
$slide-right-offset = $slide-left-offset
$static-heigth = $slide-bottom-offset
$static-side-offset = unit(data.main.dimensions.sideOffset, 'px')
$app-logo-width = unit(data.main.dimensions.appLogoWidth, 'px')
$app-logo-heigth = $app-logo-width

// Animation
$timing-function = unquote(data.animation.slide.function)
$slide-animation-time = unit(data.animation.slide.time, 's')
$inner-animation-time = unit(data.animation.slide.time, 's')
$first-animation-delay = $slide-animation-time
$second-animation-delay = unit(data.animation.slide.time + 0.3, 's')
