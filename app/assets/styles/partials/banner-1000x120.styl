.banner-1000x120
    width 998px
    height 118px
    overflow hidden
    position relative
    border 1px solid $color-purple
    font-family $fontLato
    background $color-purple

.age-limit
    display block
    width 30px
    height 30px
    border-radius 50%
    border 1px solid $color-white
    opacity .7
    text-align center
    line-height 30px
    font 400 14px/30px $fontDefault
    color $color-white
    z-index 100
    position absolute
    top 75px
    left 10px

.static-holder
    background $color-white
    position absolute
    right 0
    top 0
    width 168px
    height 118px
    box-sizing border-box
    padding 12px 0 0 30px

    &-title
        font 700 16px/1.3 $fontLato
        color $color-purple

.app-links
    padding-top 10px

    &-ios
    &-android
        display inline-block
        width 38px
        height 38px
        background no-repeat 0 0 / cover

    &-ios
        background-image inline-url('../image/ios-logo.svg')
        margin-right 5px

    &-android
        background-image inline-url('../image/android-logo.svg')