.banner-240x400
    width 238px
    height 398px
    overflow hidden
    position relative
    border 1px solid $color-purple
    font-family $fontDefault
    background $color-purple

.age-limit
    display block
    width 30px
    height 30px
    border-radius 50%
    border 1px solid $color-white
    opacity .7
    text-align center
    line-height 30px
    font 400 14px/30px $fontDefault
    color $color-white
    z-index 100
    position absolute
    top 25px
    right 10px

.static-holder
    background $color-white
    position absolute
    left 0
    right 0
    bottom 0
    height 65px
    box-sizing border-box
    padding 12px 0 0 20px

.app-links
    position absolute
    top 15px
    right 20px

    &-ios
    &-android
        display inline-block
        width 38px
        height 38px
        background no-repeat 0 0 / cover

    &-ios
        background-image url($img-url + 'ios-logo.svg')
        margin-right 5px

    &-android
        background-image url($img-url + 'android-logo.svg')

.slider
    position absolute
    top 20px
    bottom 65px
    overflow hidden
    left 10px
    right 10px

    &__item
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        opacity 0
        visibility hidden
        transition opacity $slide-animation-time $timing-function, visibility $slide-animation-time $timing-function

        &_active
            opacity 1
            visibility visible

.slide-content
    display table
    width 100%
    height 100%

    &__inner
        display table-cell
        vertical-align top

    &__top
        display table-row

        .slide-content__inner
            height 135px

    &__bottom
        display table-row

.phone-1
    background url($img-url + 'device-2x.png') no-repeat 0 0 / cover
    width 220px
    height 174px
    display inline-block
    vertical-align bottom

.logo-1
    background url($img-url + 'avito-logo.svg') no-repeat 0 0 / cover
    width 190px
    height 31px
    display inline-block
    vertical-align top